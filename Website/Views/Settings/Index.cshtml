@{
    ViewData["Title"] = "Settings";
}
@model ContosoMaintenance.Web.Models.ViewModels.SettingsViewModel
<div class="bg-light">

    <div class="container bg-light">
        <div class="py-5 text-center">
            <h2>Application Settings</h2>
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Default Settings</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Base URL</h6>
                            <small class="text-muted">@Model.DefaultBaseUrl</small>
                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">API Management Key</h6>
                            <small class="text-muted">@Model.DefaultAPIManagementKey</small>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Override Settings</h4>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="email">Base Url</label>
                        @Html.EditorFor(model => model.OverrideBaseUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OverrideBaseUrl, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label for="email">API Management Key</label>
                        @Html.EditorFor(model => model.OverrideAPIManagementKey, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OverrideAPIManagementKey, "", new { @class = "text-danger" })
                    </div>
                    <hr class="mb-4">

                    <div class="custom-control custom-checkbox">

                        <input data-val="true" type="checkbox" class="custom-control-input" id="UserOverrideConfig" name="UserOverrideConfig" checked="@Model.UserOverrideConfig" value="true">
                        <label class="custom-control-label" for="UserOverrideConfig">Use Override Settings</label>
                        @Html.ValidationMessageFor(model => model.UserOverrideConfig, "", new { @class = "text-danger" })

                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Update Settings</button>
                    <br />
                }


            </div>
        </div>
    </div>
   
